 <mvc:View controllerName="com.apptech.ui5dayone.controller.Item"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:t="sap.ui.table"
  xmlns:f="sap.ui.layout.form"
  xmlns:l="sap.ui.layout"
  xmlns:core="sap.ui.core"
  >
  <App id="Item" >
    <pages>
      <Page title="{i18n>title}">
        <content>
        <Button text="ADD ROW" press="onAddRow"/>
        <Button text="REMOVE ROW" press="onRemoveRow"/>

         <f:SimpleForm editable="true" layout="ResponsiveGridLayout" width="100%">
							<f:content>
              <!-- FOR DROPDOWN -->
                       <Label text="Item Code" width="100%">
                          <layoutData>
                            <l:GridData span="L2 M4 S12"/>
                          </layoutData>
                        </Label>
                    <Select  items="{oModel>/SelectDatabases}" selectedKey="{oModel>/DataRecord/Database}">
                        <core:ListItem key="{oModel>Code}" text="{oModel>Desc}" />
                        <layoutData>
                          <l:GridData span="L10 M8 S12"/>
                        </layoutData>
                    </Select>
              <!-- END DROPDOWN -->

              <!-- FOR USERNAME -->
                  <Label text="Item Name" width="100%">
										<layoutData>
											<l:GridData span="L2 M4 S12"/>
										</layoutData>
									</Label>

							  	<Input width="100%"  value="{oModel>/DataRecord/UserName}">
										<layoutData>
											<l:GridData span="L10 M8 S12"/>
										</layoutData>
									</Input>
            <!-- END USERNAME -->

            <!-- FOR PASSWORD -->
									<Label text="Quantity" width="100%">
										<layoutData>
											<l:GridData span="L2 M4 S12"/>
										</layoutData>
									</Label>
									<Input width="100%"  type="Password"  value="{oModel>/DataRecord/Password}">
										<layoutData>
											<l:GridData span="L10 M8 S12"/>
										</layoutData>
									</Input>
            <!-- END PASSWORD -->

              <!-- FOR PASSWORD -->
									<Label text="Product Price" width="100%">
										<layoutData>
											<l:GridData span="L2 M4 S12"/>
										</layoutData>
									</Label>
									<Input width="100%"  type="Password"  value="{oModel>/DataRecord/Password}">
										<layoutData>
											<l:GridData span="L10 M8 S12"/>
										</layoutData>
									</Input>
            <!-- END PASSWORD -->
						  </f:content>
						</f:SimpleForm>
        <!-- TABLE START -->
        <t:Table
				rows="{oModel>/Items}"
        id="productTable"
				selectionMode="Single"
				visibleRowCount="7"
				paste="onPaste"
				ariaLabelledBy="title">
				<t:extension>
					<OverflowToolbar>
						<Title id="title" text="Products"/>
					</OverflowToolbar>
				</t:extension>
        <!-- COLUMN START -->
				<t:columns>
					<t:Column width="11rem">
						<Label text="Item Code" />
						<t:template>
							<Text text="{oModel>ItemCode}" wrapping="false" />
						</t:template>
					</t:Column>

          <t:Column width="11rem">
						<Label text="Item Name" />
						<t:template>
							<Text text="{oModel>ItemName}" wrapping="false" />
						</t:template>
					</t:Column>

          <t:Column width="11rem">
						<Label text="Quantity" />
						<t:template>
							<Text text="{oModel>Quantity}" wrapping="false" />
						</t:template>
					</t:Column>

          <t:Column width="11rem">
						<Label text="Product Price" />
						<t:template>
							<Text text="{oModel>UnitPrice}" wrapping="false" />
						</t:template>
					</t:Column>
          </t:columns>
<!-- COLUMN END -->
        </t:Table>
<!-- TABLE END -->
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>
